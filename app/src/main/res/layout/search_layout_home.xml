<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_toolbar"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/frg_home_new_cook"
        android:layout_width="@dimen/icon_small"
        android:layout_height="@dimen/icon_small"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/spacing_normal_x"
        android:src="@drawable/ic_add"/>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginStart="@dimen/spacing_normal_x"
        android:layout_marginEnd="@dimen/spacing_normal_x"
        android:layout_marginTop="@dimen/spacing_tiny"
        android:layout_marginBottom="@dimen/spacing_tiny"
        android:orientation="horizontal"
        android:background="@drawable/bg_aty_main_search">
        <LinearLayout
            android:id="@+id/frg_home_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true">
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="@dimen/icon_smaller"
                android:layout_height="@dimen/icon_smaller"
                android:src="@drawable/ic_search"
                android:layout_gravity="center"/>
            <TextView
                android:layout_marginStart="@dimen/spacing_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="@dimen/font_large"
                android:text="@string/activity_main_search" />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/frg_home_speak_search"
            android:layout_width="@dimen/icon_smaller"
            android:layout_height="@dimen/icon_smaller"
            android:layout_marginStart="@dimen/spacing_normal_x"
            android:layout_marginEnd="@dimen/spacing_normal_x"
            android:src="@drawable/ic_speak"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/frg_home_msg"
        android:layout_width="@dimen/icon_small"
        android:layout_height="@dimen/icon_small"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/spacing_normal_x"
        android:src="@drawable/ic_message"/>
</LinearLayout>

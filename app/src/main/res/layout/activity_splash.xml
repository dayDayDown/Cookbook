<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ming.cookbook.ui.activity.SplashActivity">
    <TextView
        android:id="@+id/activity_splash_tv_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="@dimen/spacing_normal_x"
        android:layout_marginTop="@dimen/spacing_normal_x"/>
    <ImageView
        android:id="@+id/activity_splash_iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/activity_splash"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/activity_splash_tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="@string/activity_splash_description"/>
</RelativeLayout>

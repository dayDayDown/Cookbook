<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/spacing_normal_x"
        android:paddingBottom="@dimen/spacing_normal_x">
        <TextView
            android:id="@+id/daily_recommend_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_normal"
            android:textColor="@color/black"
            android:text="@string/text_home_daily_recommend"/>
        <TextView
            android:id="@+id/daily_recommend_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:textSize="@dimen/font_smaller"
            android:textColor="@color/black_overlay"
            android:text="@string/text_more"/>
    </RelativeLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/daily_recommend_viewPager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/icon_xxl"
        android:layout_marginTop="@dimen/spacing_middle"
        android:layout_marginBottom="@dimen/spacing_middle">
    </android.support.v4.view.ViewPager>

    <com.example.ming.cookbook.ui.widgets.EasyTabLayout
        android:id="@+id/daily_recommend_tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_huge_x"
        android:layout_marginEnd="@dimen/spacing_huge_x"
        app:textSize="@dimen/font_small"
        app:tabIndicatorHeight="0dp"
        app:tabSelectedTextColor="@color/black"
        app:tabTextColor="@color/black_overlay">
    </com.example.ming.cookbook.ui.widgets.EasyTabLayout>
</LinearLayout>